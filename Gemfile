source 'http://rubygems.org'

# Requires nanoc site generator
gem 'nanoc'
gem 'systemu'

# compass for SASS
gem 'compass'
gem 'bootstrap-sass', '~> 3.1.1'

# our markdown parsing library
gem 'kramdown'
gem 'redcarpet'

# nokogiri helps us filter html
gem 'nokogiri'

# uglify our js
gem 'uglifier'

# require guard to automate compilation
group :development do
  gem 'guard'
  gem 'guard-nanoc'
  gem 'guard-process'
  gem 'guard-livereload'
  gem 'rack-livereload'
  # webserver
  gem 'adsf'
end

